<?xml version="1.0"?>

<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="onrobot_rg6_gazebo" params="prefix">
    <gazebo_ros2>
      <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
        <robotNamespace>/onrobot_rg6</robotNamespace>
        <robotSimType>gazebo_ros2_control/DefaultRobotHWSim</robotSimType>
      </plugin> 
    </gazebo_ros2>



    <gazebo_ros2>

      <plugin filename="libroboticsgroup_upatras_gazebo_ros2_mimic_joint_plugin.so" name="mimic_${prefix}left_inner_knuckle_joint">
        <joint>${prefix}finger_joint</joint>
        <mimicJoint>${prefix}left_inner_knuckle_joint</mimicJoint>
        <multiplier>-1.0</multiplier>
        <offset>0.0</offset>
        <maxEffort>5.0</maxEffort>

        <!-- <hasPID /> -->

      </plugin>

      <plugin filename="libroboticsgroup_upatras_gazebo_ros2_mimic_joint_plugin.so" name="mimic_${prefix}right_inner_knuckle_joint">
        <joint>${prefix}finger_joint</joint>
        <mimicJoint>${prefix}right_inner_knuckle_joint</mimicJoint>
        <multiplier>-1.0</multiplier>
        <offset>0.0</offset>
        <maxEffort>5.0</maxEffort>

        <!-- <hasPID /> -->

      </plugin>

      <plugin filename="libroboticsgroup_upatras_gazebo_ros2_mimic_joint_plugin.so" name="mimic_${prefix}left_inner_finger_joint">
        <joint>${prefix}finger_joint</joint>
        <mimicJoint>${prefix}left_inner_finger_joint</mimicJoint>
        <multiplier>1.0</multiplier>
        <offset>0.0</offset>
        <maxEffort>5.0</maxEffort>

        <!-- <hasPID /> -->

      </plugin>

      <plugin filename="libroboticsgroup_upatras_gazebo_ros2_mimic_joint_plugin.so" name="mimic_${prefix}right_inner_finger_joint">
        <joint>${prefix}finger_joint</joint>
        <mimicJoint>${prefix}right_inner_finger_joint</mimicJoint>
        <multiplier>1.0</multiplier>
        <offset>0.0</offset>
        <maxEffort>5.0</maxEffort>

        <!-- <hasPID /> -->

      </plugin>
      <plugin filename="libroboticsgroup_upatras_gazebo_ros2_mimic_joint_plugin.so" name="mimic_${prefix}right_outer_knuckle_joint">
        <joint>${prefix}finger_joint</joint>
        <mimicJoint>${prefix}right_outer_knuckle_joint</mimicJoint>
        <multiplier>-1.0</multiplier>
        <offset>0.0</offset>
        <maxEffort>5.0</maxEffort>

        <!-- <hasPID /> -->
        
      </plugin>
    </gazebo_ros2>

  </xacro:macro>
</robot>
